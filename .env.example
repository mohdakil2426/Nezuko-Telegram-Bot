# ============================================================
# Nezuko v1.0.0 - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================

# ==========================================================
# Telegram Bot Configuration (Required)
# ==========================================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# ==========================================================
# Environment
# ==========================================================
# Options: development, staging, production
ENVIRONMENT=development

# ==========================================================
# Database Configuration
# ==========================================================
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://nezuko:nezuko_secret@localhost:5432/nezuko

# Password for PostgreSQL (used by Docker Compose)
POSTGRES_PASSWORD=nezuko_secret

# ==========================================================
# Redis Configuration (Optional but Recommended)
# ==========================================================
# Redis connection URL for caching
# Leave empty to disable Redis caching
REDIS_URL=redis://localhost:6379/0

# Redis password (for production)
REDIS_PASSWORD=

# ==========================================================
# Rate Limiting
# ==========================================================
# Enable/disable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# ==========================================================
# Logging
# ==========================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================================
# Security (Production Only)
# ==========================================================
# Secret key for signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# ==========================================================
# Webhook Configuration (Production Only)
# ==========================================================
# Set to true to use webhook mode instead of polling
USE_WEBHOOK=false

# Webhook URL (your server's public URL)
WEBHOOK_URL=

# Webhook port (default: 8443)
WEBHOOK_PORT=8443

# Path to SSL certificate (for self-signed certs)
WEBHOOK_CERT_PATH=

# ==========================================================
# Performance Tuning
# ==========================================================
# Maximum concurrent handlers
MAX_CONCURRENT_HANDLERS=100

# Database connection pool size
DB_POOL_SIZE=10

# Cache TTL in seconds
CACHE_TTL=300

# ==========================================================
# Admin Panel - Authentication (FastAPI Backend)
# ==========================================================
# JWT secret for admin authentication (generate with: openssl rand -hex 32)
ADMIN_JWT_SECRET=

# JWT access token expiry in minutes (recommended: 15)
ADMIN_JWT_ACCESS_EXPIRE_MINUTES=15

# JWT refresh token expiry in days (recommended: 7)
ADMIN_JWT_REFRESH_EXPIRE_DAYS=7

# JWT issuer (your domain)
ADMIN_JWT_ISSUER=https://api.yourdomain.me

# JWT audience (your admin panel domain)
ADMIN_JWT_AUDIENCE=https://admin.yourdomain.me

# Initial admin credentials (CHANGE AFTER FIRST LOGIN!)
ADMIN_INITIAL_EMAIL=admin@yourdomain.me
ADMIN_INITIAL_PASSWORD=ChangeMe123!
ADMIN_INITIAL_FULL_NAME=Admin User

# ==========================================================
# Admin Panel - API Configuration (FastAPI)
# ==========================================================
# API Base URL (for internal communication)
API_BASE_URL=http://localhost:8080

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://admin.yourdomain.me

# FastAPI debug mode (true for development, false for production)
API_DEBUG=true

# ==========================================================
# Admin Panel - Frontend Configuration (Next.js)
# ==========================================================
# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# WebSocket URL (for real-time logs)
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ==========================================================
# Admin Panel - Security Headers
# ==========================================================
# Enable security headers (true for production)
SECURITY_HEADERS_ENABLED=false

# ==========================================================
# Observability (Optional)
# ==========================================================
# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics port
METRICS_PORT=9090

