# ============================================================
# Nezuko v1.0.0 - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================

# ==========================================================
# Telegram Bot Configuration (Required)
# ==========================================================
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# ==========================================================
# Environment
# ==========================================================
# Options: development, staging, production
ENVIRONMENT=development

# ==========================================================
# Database Configuration
# ==========================================================
# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://nezuko:nezuko_secret@localhost:5432/nezuko

# Password for PostgreSQL (used by Docker Compose)
POSTGRES_PASSWORD=nezuko_secret

# ==========================================================
# Redis Configuration (Optional but Recommended)
# ==========================================================
# Redis connection URL for caching
# Leave empty to disable Redis caching
REDIS_URL=redis://localhost:6379/0

# Redis password (for production)
REDIS_PASSWORD=

# ==========================================================
# Rate Limiting
# ==========================================================
# Enable/disable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# ==========================================================
# Logging
# ==========================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================================
# Security (Production Only)
# ==========================================================
# Secret key for signing (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# ==========================================================
# Webhook Configuration (Production Only)
# ==========================================================
# Set to true to use webhook mode instead of polling
USE_WEBHOOK=false

# Webhook URL (your server's public URL)
WEBHOOK_URL=

# Webhook port (default: 8443)
WEBHOOK_PORT=8443

# Path to SSL certificate (for self-signed certs)
WEBHOOK_CERT_PATH=

# ==========================================================
# Performance Tuning
# ==========================================================
# Maximum concurrent handlers
MAX_CONCURRENT_HANDLERS=100

# Database connection pool size
DB_POOL_SIZE=10

# Cache TTL in seconds
CACHE_TTL=300
