# ============================================================
# Nezuko API - Environment Configuration
# ============================================================
# Copy this file to .env
# ============================================================

# Application
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO
MOCK_AUTH=false

# Database
# Use postgresql+asyncpg://... for production
DATABASE_URL=sqlite+aiosqlite:///../../storage/data/nezuko.db

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=
# Encryption key for sensitive data in DB
ENCRYPTION_KEY=
# Allowed CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Supabase (Optional - for Auth/Storage)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_JWT_SECRET=

# Sentry (Optional)
SENTRY_DSN=
