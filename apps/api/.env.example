# ============================================================
# Nezuko API - Environment Configuration
# ============================================================
# NOTE: All variables require API_ prefix (see config.py env_prefix)
# Copy this file to .env and fill in your values

# ==========================================================
# SECURITY
# ==========================================================
# Fernet encryption key for bot tokens
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
API_ENCRYPTION_KEY=

# Secret key for session signing (auto-generated if not set)
API_SECRET_KEY=

# ==========================================================
# DATABASE (PostgreSQL with Docker - required)
# ==========================================================
# Start PostgreSQL container:
# docker run -d --name nezuko-postgres -e POSTGRES_USER=nezuko -e POSTGRES_PASSWORD=nezuko123 -e POSTGRES_DB=nezuko -p 5432:5432 postgres:17-alpine
API_DATABASE_URL=postgresql+asyncpg://nezuko:nezuko123@localhost:5432/nezuko

# ==========================================================
# REDIS (Optional - for caching and real-time features)
# ==========================================================
API_REDIS_URL=redis://localhost:6379/0
API_REDIS_PASSWORD=

# ==========================================================
# ENVIRONMENT
# ==========================================================
API_ENVIRONMENT=development
API_LOG_LEVEL=INFO

# ==========================================================
# API SERVER
# ==========================================================
API_API_BASE_URL=http://localhost:8080
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
API_API_DEBUG=true

# ==========================================================
# AUTHENTICATION
# ==========================================================
# Set to true for development without Telegram login
API_MOCK_AUTH=true

# For production Telegram Login:
# API_LOGIN_BOT_TOKEN=<your-bot-token>
# API_BOT_OWNER_TELEGRAM_ID=<your-telegram-id>

# ==========================================================
# OBSERVABILITY (Optional)
# ==========================================================
API_SENTRY_DSN=
API_METRICS_PORT=9090
